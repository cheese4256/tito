<?xml version="1.0" encoding="UTF-8"?>
<web-app
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://java.sun.com/xml/ns/javaee"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
  id="WebApp_ID" version="3.0">

  <display-name>Tito Homeruns REST API</display-name>

  <filter>
  	<filter-name>CORS</filter-name>
  	<filter-class>com.tito.filter.CorsFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>CORS</filter-name>
  	<servlet-name>TestRest</servlet-name>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>CORS</filter-name>
  	<url-pattern>/sausage/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>CORS</filter-name>
  	<url-pattern>/team/*</url-pattern>
  </filter-mapping>

  <servlet>
    <servlet-name>Jersey Web Application</servlet-name>
    <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
    <init-param>
    	<param-name>jersey.config.server.provider.packages</param-name>
    	<param-value>com.tito.api</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>Jersey Web Application</servlet-name>
    <url-pattern>/api/*</url-pattern>
  </servlet-mapping>

